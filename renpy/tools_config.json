{
  "description": "External tools and models configuration",
  "version": "1.0.0",

  "models": {
    "aya-23-8b": {
      "name": "Aya-23-8B",
      "repo": "bartowski/aya-23-8B-GGUF",
      "file": "aya-23-8B-Q4_K_M.gguf",
      "size": "4.8GB",
      "destination": "models/aya-23-8B-GGUF/aya-23-8B-Q4_K_M.gguf",
      "script": "scripts/translate_with_aya23.py",
      "description": "Higher quality for 23 European and major Asian languages",
      "languages": ["ro", "es", "fr", "de", "it", "pt", "ru", "tr", "cs", "pl", "uk", "bg", "zh", "ja", "ko", "vi", "th", "id", "ar", "he", "hi", "nl", "fi"]
    },
    "madlad-400-3b": {
      "name": "MADLAD-400-3B",
      "repo": "google/madlad400-3b-mt",
      "file": null,
      "size": "~6GB",
      "destination": "models/madlad400-3b-mt",
      "script": "scripts/translate_with_madlad.py",
      "description": "Supports 400+ languages (30 pre-configured with language codes)",
      "languages": ["ro", "es", "fr", "de", "it", "pt", "ru", "tr", "cs", "pl", "uk", "bg", "zh", "ja", "ko", "vi", "th", "id", "ar", "he", "fa", "hi", "bn", "nl", "sv", "no", "da", "fi", "el", "hu"],
      "huggingface_download": true
    },
    "seamlessm4t-v2": {
      "name": "SeamlessM4T-v2",
      "repo": "facebook/seamless-m4t-v2-large",
      "file": null,
      "size": "~5GB",
      "destination": "models/seamless-m4t-v2-large",
      "script": "scripts/translate_with_seamlessm4t.py",
      "description": "Meta's latest multimodal translation model (nearly 100 languages)",
      "languages": ["ro", "es", "fr", "de", "it", "pt", "ru", "tr", "cs", "pl", "uk", "bg", "zh", "ja", "ko", "vi", "th", "id", "ar", "he", "fa", "hi", "bn", "nl", "sv", "no", "da", "fi", "el", "hu"],
      "huggingface_download": true,
      "requires_tiktoken": true
    }
  },

  "tools": {
    "renpy": {
      "version": "8.2.0",
      "url": "https://www.renpy.org/dl/8.2.0/renpy-8.2.0-sdk.zip",
      "destination": "renpy/",
      "description": "Ren'Py SDK for generate-translations command"
    },
    "rpaextract": {
      "destination": "renpy/rpaExtract.exe",
      "description": "Extract RPA archives from Ren'Py games (included in repository)"
    }
  }
}
